def makeybot(makey_bot = {}):
  for i in makey_bot: #prints dictionary
      print(i, ": ", makey_bot[i], sep = "")
  print()
  
  inpt = input("Input a key: ")
  try:
      print("Value of", inpt, "key in the dictionary is:", makey_bot[inpt])
      choice = input("Do you want this value to be updated ?: ")
      if(choice == "yes"):
          update = input("Input the updated value: ")
          makey_bot[inpt] = update
          print(inpt, ": ", makey_bot[inpt], sep = "")
  except:
      print("That is not a key in the dictionary")

